<?xml version='1.0' encoding='UTF-8' standalone='no'?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>com.ruedigergad.qtodo</id>
    <name>Q To-Do</name>
    <versionNumber>1.12.1</versionNumber>
    <description>Q To-Do is a simple to-do list organizer. Its features include: synchronization with desktop version, nested to-dos, sketches, an intuitive and easy to use user interface, and more.</description>
    <initialWindow>
        <aspectRatio>portrait</aspectRatio>
        <autoOrients>false</autoOrients>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
    </initialWindow>
    <author>ruedigergad.com</author>
    <copyright>Ruediger Gad, r.c.g@gmx.de, ruedigergad.com</copyright>
    <env value="app/native/imports:app/native/lib/imports:/usr/lib/qt4/imports" var="QML_IMPORT_PATH"/>
    <env value="app/native/plugins:/usr/lib/qt4/plugins" var="QT_PLUGIN_PATH"/>
    <env value="app/native/lib/qmf/plugins" var="QMF_PLUGINS"/>
    <env value="app/native/lib:app/native/lib/qmf/lib:/usr/lib/qt4/lib/" var="LD_LIBRARY_PATH"/>
    <arg>-style</arg>
    <arg>qnxlight</arg>
    <action system="true">run_native</action>
    <action>access_internet</action>
    <!-- qtodo should point to the project binary, path can be relative -->
    <asset path="qtodo" type="Qnx/Elf" entry="true">qtodo</asset>
    <asset path="%SRC_DIR%/qml/common">qml/common</asset>
    <asset path="%SRC_DIR%/qml/bb10">qml/bb10</asset>
    <asset path="%SRC_DIR%/icons">qml/icons</asset>
    <asset path="%SRC_DIR%/lib/build/bb10/qmlcanvas">lib/imports/qmlcanvas</asset>
    <asset path="%SRC_DIR%/lib/build/bb10/qmf">lib/qmf</asset>
    <asset path="/home/rc/repositories/private/qt/qtodo/src/logo_bb10.png">logo_bb10.png</asset>
    <icon>
        <image>logo_bb10.png</image>
    </icon>
    <authorId>gYAAgM1hVEHyVWp9kEL-6WK4ckQ</authorId>
</qnx>
